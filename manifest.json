{
  "manifest_version": 3,
  "name": "React Sidepanel Extension",
  "version": "1.0.0",
  "description": "A Chrome extension with React app in sidepanel",
  "permissions": [
    "sidePanel",
    "activeTab"
  ],
  "action": {
    "default_title": "Open React Sidepanel"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 